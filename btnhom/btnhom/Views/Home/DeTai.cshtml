@section scripts{
    <script>
        var previousState = "#mophong";
        $(document).ready(function () {
            $('#example').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.10.22/i18n/Vietnamese.json'
                }
            });
        });

        function showInfo(id) {
            if (previousState != id) {
                $(previousState).css("display", "none");
                $(id).css("display", "block");
                previousState = id;
            }
        }

        function reloadData() {
            if (previousState == "#data") {
                console.log("load nè");
